{
  "extends": ["tslint:latest", "tslint-react"],
  "rules":{
    "object-literal-sort-keys":false,
    "no-implicit-dependencies":false,
    "no-var-requires":false,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "semicolon": [
      true,
      "never"
    ],
    "no-var-keyword":true,
    "trailing-comma": [
      true, {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "no-submodule-imports":false,
    "jsx-no-multiline-js":false,
    "no-console":true,
    "max-classes-per-file":false,
    "no-empty":false
  },
  "linterOptions": {
    "exclude": [
        "/node_modules",
        "/build",
        "/android",
        "/ios",
        "/src/resources/"
    ]
  }
}